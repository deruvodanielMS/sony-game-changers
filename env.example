# ===========================================
# Repository Sources
# ===========================================
# Options: mock | prisma | vendor
# Local development uses mock, Vercel uses prisma
GOALS_SOURCE=mock
USERS_SOURCE=mock
REPOSITORY_SOURCE=mock

# ===========================================
# Database (Prisma Postgres)
# ===========================================
# Only needed if using prisma source
# Get these from Vercel dashboard -> Storage -> prisma-postgres -> Quickstart
DATABASE_URL="postgres://user:password@db.prisma.io:5432/postgres?sslmode=require"
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-api-key"

# Vendor API (only needed if using vendor)
# VENDOR_API_URL=
# VENDOR_API_TOKEN=

# ===========================================
# Authentication
# ===========================================
# Enable/disable authentication (false = uses devSession automatically)
# Local: false, Vercel: true
NEXT_PUBLIC_AUTH_ENABLED=false

# NextAuth configuration
# NEXTAUTH_URL: Set to your domain (auto-detected on Vercel)
# NEXTAUTH_SECRET: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here

# Okta (only needed if NEXT_PUBLIC_AUTH_ENABLED=true and using Okta)
# OKTA_CLIENT_ID=
# OKTA_CLIENT_SECRET=
# OKTA_ISSUER=

# ===========================================
# Demo Credentials (for local development)
# ===========================================
# Login: ic@employee.test / ic-pass
# Login: manager@employee.test / manager-pass
DEMO_PASSWORD_KEY=demo-key-gamechangers
# Optional encrypted passwords (defaults work with DEMO_PASSWORD_KEY above)
# DEMO_IC_PASSWORD_ENC=
# DEMO_MANAGER_PASSWORD_ENC=
